{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.19/MicrosoftTeams.schema.json",
    "manifestVersion": "1.19",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "developer": {
        "name": "Teams App, Inc.",
        "websiteUrl": "${{TAB_ENDPOINT}}",
        "privacyUrl": "${{TAB_ENDPOINT}}/index.html#/privacy",
        "termsOfUseUrl": "${{TAB_ENDPOINT}}/index.html#/termsofuse"
    },
    "icons": {
        "color": "icon.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "Forge Matrix",
        "full": "Full name for Sample"
    },
    "description": {
        "short": "Short description of Sample",
        "full": "Full description of Sample"
    },
    "accentColor": "#FFFFFF",
    "bots": [
        {
            "botId": "73fb8e83-7bc3-4e93-93bf-86e94c658db7",
            "scopes": ["team","groupChat","personal"],
            "supportsFiles": false,
            "isNotificationOnly": false,
            "commandLists": [
        {
          "scopes": ["personal", "team","groupChat"],
          "commands": [
            {
              "title": "Create Issue",
              "description": "Create a Jira issue from a message."
            }
          ]
        }
      ]
        }
    ],

    "composeExtensions": [
        {
            "botId": "73fb8e83-7bc3-4e93-93bf-86e94c658db7",
            "canUpdateConfiguration": true,
            "commands": [
                
                {
                    "id": "create_Issue",
                    "title": "Create Issue",
                    "description": "Create a Issue in Jira",
                    "type": "action",
                    "fetchTask": true,
                    "context": ["message"]
                },
                {
                    "id": "Add_comment",
                    "title": "add Comment",
                    "description": "Add a comment on Issue",
                    "type": "action",
                    "fetchTask": true,
                    "context": ["message"]
                }
            ]
        }
    ],
    "configurableTabs": [
        {
            "configurationUrl": "${{TAB_ENDPOINT}}/index.html#/dev-tab",
            "canUpdateConfiguration": true,
            "scopes": ["team", "groupChat"]
        }
    ],

   "staticTabs": [
    {
        "entityId": "index",
        "name": "Home",
        "contentUrl": "${{TAB_ENDPOINT}}/index.html#/tab",
        "websiteUrl": "${{TAB_ENDPOINT}}/index.html#/tab",
        "scopes": [
            "personal",
            "groupChat",
            "team"
        ]
    }
],


    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    
    "validDomains": [
        "${{TAB_HOSTNAME}}",
        "*.teams.microsoft.com"
    ],

    "webApplicationInfo": {
        "id": "${{AAD_APP_CLIENT_ID}}",
        "resource": "api://${{TAB_DOMAIN}}/${{AAD_APP_CLIENT_ID}}"
    },

    "staticTabs": [
    {
        "entityId": "home",
        "name": "Home",
        "contentUrl": "${{TAB_ENDPOINT}}/index.html#/home",
        "websiteUrl": "${{TAB_ENDPOINT}}/index.html#/home",
        "scopes": ["personal", "groupChat", "team"]
    },
    {
        "entityId": "dashboard",
        "name": "Dashboard",
        "contentUrl": "${{TAB_ENDPOINT}}/index.html#/dashboard",
        "websiteUrl": "${{TAB_ENDPOINT}}/index.html#/dashboard",
        "scopes": ["personal"]
    },
    {
        "entityId": "settings",
        "name": "Settings",
        "contentUrl": "${{TAB_ENDPOINT}}/index.html#/settings",
        "websiteUrl": "${{TAB_ENDPOINT}}/index.html#/settings",
        "scopes": ["personal"]
    }
]

}
